@using CleanArchitecture.Application.ViewModels
@model ForumViewModel

<h4>Edit forum</h4>
<hr />
<form method="post" asp-controller="Forum" asp-action="AddOrEdit">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="/img/DefaultForum.png" width="55%" />
            <br />
            <div class="text-muted">
                @Model.NumberOfPosts Posts By
                @Model.NumberOfUsers Users
            </div>
        </div>
        <div class="col-md-6">
            <input asp-for="Id" hidden />
            <div class="form-group">
                <label asp-for="Title">Forum Title</label>
                <input asp-for="Title" class="form-control" placeholder="Add forum title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description">Forum Description</label>
                <input asp-for="Description" class="form-control" placeholder="Add forum description" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Update</button>
                <a asp-controller="Forum" asp-action="Index" class="btn btn-warning" style="width:auto">Back to Forum</a>
            </div>
        </div>
    </div>
</form>

@section scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}