@using CleanArchitecture.Application.ViewModels
@model UserListViewModel
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-6">
        <h2>User List</h2>
    </div>
</div>
<br />
<div>
    @if (Model.Users.Any())
    {
        <table class="table">
            <thead class="thead-dark">
                <tr>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Member Since</th>
                    <th>Active</th>
                </tr>
            </thead>
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(m => item.MemberSince)
                    </td>
                    <td>
                        @if (item.IsActive)
                        {
                            <a class="btn btn-primary btn-sm" asp-action="" asp-route-id="@item.Id">Deactivate</a>
                        }
                        else
                        {
                            <a class="btn btn-secondary btn-sm" asp-action="" asp-route-id="@item.Id">Activate</a>
                        }
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No Users</p>
    }
</div>