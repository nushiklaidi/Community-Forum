@if (ViewBag.ErrorMessage != null)
{
    @section scripts{

        <script>
            $(document).ready(function () {
                Swal.fire({
                    title: "@ViewBag.ErrorMessage",
                    text: "@ViewBag.Contact",
                    icon: "error",
                    buttons: {
                        confirm: {
                            text: "Ok",
                            value: true,
                            className: "swal-btn-primary-light"
                        }
                    }
                }).then((result) => {
                    if (result) {
                        window.location = "/Home/Index";
                    }
                });
            });
        </script>

    }
}